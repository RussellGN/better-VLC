{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "better-vlc",
  "version": "0.1.0",
  "identifier": "com.better-vlc.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {

    "windows": [
      {        
        "title": "Better VLC",
        "width": 800,
        "height": 600,
        "maximized": true,
        "backgroundColor": "#000a00",
        "center": true  ,      
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
